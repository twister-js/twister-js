{
  "name": "twister-js",
  "version": "1.0.0",
  "private": true,
  "description": "A collection of JavaScript/TypeScript packages under @twister-js scope",
  "keywords": [
    "monorepo",
    "typescript",
    "react",
    "components"
  ],
  "author": "TwistByte",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@types/node": "^22.10.6",
    "prettier": "^3.4.2",
    "turbo": "^2.4.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.9.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/twister-js/twister-js.git"
  },
  "bugs": {
    "url": "https://github.com/twister-js/twister-js/issues"
  },
  "homepage": "https://github.com/twister-js/twister-js#readme"
}
